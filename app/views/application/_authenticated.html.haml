= render 'overlay'
#wrapper
  #header.clearfix
    .row
      %h1.col-md-10
        %i.fa.fa-pied-piper
        = t('pivotal')
        %span= t('poker')
      #header-links.text-right
        %span.header-links
          %i.fa.fa-user
          %span &nbsp;
          = current_user[:username]
          %span &nbsp; | &nbsp;
        %span.header-links
          = link_to logout_path, method: :delete, class: 'dark-green header-links' do
            %i.fa.fa-sign-out
            = t('signout')
    = render 'menu', projects: @projects unless @projects.blank?
  - if @projects.blank?
    #content
      .text-center.default-state
        %span.fa.fa-rocket
        %h2
          = t('dashboard.empty.title')
          %small= t('dashboard.empty.subtitle')
  - else
    #content.col-md-12
      = yield
